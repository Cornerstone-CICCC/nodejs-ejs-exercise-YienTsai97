<%- include('partials/header') %>
    <h1>
        <%= title %>
    </h1>
    <p>Below are messages from all visitors :)</p>
    <ul class="message-list">
        <% messages.forEach(message=>{ %>
            <li>
                <%= message.name %> said: "<%= message.messageText %>"
            </li>
            <% }) %>
    </ul>

    <form action="/contact" method="POST">
        <label>
            <span> Visitor name:</span>
            <input type="text" name="name" placeholder="Jack">
        </label>
        <label>
            <span> Message:</span>
            <input type="text" name="messageText" placeholder="Super cool website!">
        </label>
        <button type="submit">Add Message here! </button>
    </form>

    <%- include('partials/footer') %>